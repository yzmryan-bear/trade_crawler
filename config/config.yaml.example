# Application Configuration

# JSON Message Source (initial)
json:
  file_path: "dc_tracker.json"

# Extraction Settings
extraction:
  confidence_threshold: 0.7
  llm_model: "gpt-4o-mini"  # or "claude-3-opus-20240229"
  llm_provider: "openai"  # or "anthropic"
  max_retries: 3

# Database Settings
database:
  type: "sqlite"
  path: "./data/trading_actions.db"

# UI Settings
ui:
  port: 8501
  host: "localhost"

